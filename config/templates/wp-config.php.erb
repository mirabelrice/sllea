<?php
/*
* Version of config.php for use in staging/production
*/
/*** ENVIRONMENT ***/
define('WP_ENV', '<%= wp_env %>');
$site_root = (WP_ENV === 'production')? '<%= project_path %>/public_html/' : '<%= project_path %>/dev/';
$table_prefix  = 'wp_';

/*** DATABASE CONFIGURATION ***/
define('DB_NAME', '<%= database['database'] %>');
define('DB_USER', '<%= database['username'] %>');
define('DB_PASSWORD', '<%= database['password'] %>');
define('DB_HOST', '<%= database['host'] %>');
define('DB_CHARSET', 'utf8');
define('DB_COLLATE', '');

/*** Localization Settings ***/
define('WPLANG', '');

/*** Security Keys (Salt) ***/
require('<%= shared_path %>/wp-security-keys.php');
define('DOMAIN_CURRENT_SITE', '<%= wp_domain %>');

/*** PATHS/URLS ***/
define('WP_HOME', 'http://'.DOMAIN_CURRENT_SITE);
define('WP_SITEURL', 'http://'.DOMAIN_CURRENT_SITE);
if(!defined('ABSPATH')) define('ABSPATH', $site_root);

/*** INCLUDES ***/
require_once(ABSPATH . 'wp-settings.php');
